<%  include ../partials/header %>
<div class="container">
    <div class="row">
    
    <h1 style="text-align : center;">EDIT <%= campground.name%></h1>
    <div style="width: 30%;margin: 30px auto">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST"> 
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.price%>" name="campground[price]"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.place%>" name="campground[place]"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg">SUBMIT</button>
            </div>
        </form>
    <a href="/campgrounds">Go Back</a>
    </div>
    </div>
</div>
